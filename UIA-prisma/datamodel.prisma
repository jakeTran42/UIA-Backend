  BUFF_AOE
  DAMAGE_TARGET
  DAMAGE_AOE
  DAMAGE_DOT
  HEAL_TARGET
  HEAL_AOE
  HEAL_DOT
  CROWD_CONTROL
  SUMMON
  DEBUFF
  DISPELL
  ABSORB
  STEALTH
  PASSIVE
}

enum ElementType {
